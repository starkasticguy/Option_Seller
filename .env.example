# Zerodha API Credentials - Manual Login Flow
# Get your API key and secret from https://developers.kite.trade/
ZERODHA_API_KEY=your_api_key_here
ZERODHA_API_SECRET=your_api_secret_here

# Access Token (Optional - Generated after first login)
# After first login, the system will display an access token
# Save it here to skip manual login on subsequent runs
# Note: Access tokens expire daily at midnight
ZERODHA_ACCESS_TOKEN=

# The following are NOT needed for API-based manual login
# They are kept for legacy compatibility only
ZERODHA_USER_ID=
ZERODHA_PASSWORD=
ZERODHA_PIN=

# Telegram Notifications (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Email Notifications (Optional)
EMAIL_FROM=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_TO=recipient@email.com
